<?xml version="1.0" encoding="UTF-8"?>
<config>
    <title>Schémas de base de données</title>

    <description><![CDATA[
        <p>
            Un schéma de base de données est un document xml qui définit la
            structure complète d'une base de données (liste des champs, des
            index, des tables de lookup, etc.)
        </p>
        <p>
            Ce module permet de créer de nouveaux schémas, de modifier les 
            schémas existants et de manipuler les fichiers xml correspondants
            (copier, renommer, supprimer...) 
        </p>
    ]]></description>

    <icon>/FabWeb/modules/AdminSchemas/images/logo.png</icon>

    <directory>data/schemas</directory>
    <utf8>true</utf8>
    
    <actionIndex>
        <template>index.html</template>
    </actionIndex>

    <actionEditSchema>
        <template>editSchema.html</template>
        <js>
            <item>
                <src>jquery.js</src>
                <placement>top</placement>
            </item>
<!--             <item>/FabWeb/js/lib/jquery/jqModal.min.js</item>  -->
            <item>/FabWeb/js/lib/jquery/json.min.js</item>
            <item>/FabWeb/modules/AdminSchemas/EditSchema/js/editSchema.js</item>
<!--            <item>/FabWeb/js/lib/jquery/tabs/ui.tabs.min.js</item>-->
        </js>
        <css>
<!--              <item>/FabWeb/js/lib/jquery/jqModal.css</item> -->
            <item>/FabWeb/modules/AdminSchemas/EditSchema/css/editSchema.css</item>
        </css>
    </actionEditSchema>
    
    <actionChoose>
        <template>choose.html</template>
    </actionChoose>

    <actionNew>
        <template>new.html</template>
    </actionNew>
</config>
