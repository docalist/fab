<?xml version="1.0" encoding="UTF-8"?>

<!-- Fichier de configuration du module ThesaurusModule -->
<config>
    <database>thesaurus</database>
    <css>
        <item>formulaire.css</item><!-- todo: ne devrait pas être nécessaire -->
    </css>
    <!-- Index : affiche la liste des  micro-thesaurus -->
    <actionIndex>
        <action>actionSearch</action>
        
        <template>index.html</template>

        <!--  equation par défaut : liste les micro-thesaurus (les descripteurs qui n'ont pas de TG) -->
        <equation>TG:__empty AND EM:__empty</equation>
        
        <!-- afficher toutes les réponses -->
        <max>-1</max>
        <sort>+</sort>    
        <js>
            <item>jquery.js</item>
            <item>rpc.js</item>
            <item>/fabweb/js/thesaurus.js</item>
        </js>
        <css>
            <item>rpc.css</item>
            <item>/fabweb/css/thesaurus/thesaurus.css</item>
        </css>
        
    </actionIndex>
    
    <actionThesoLookup>
        <action>actionSearch</action>
        <template>lookup.html</template>
    </actionThesoLookup>
    
    <actionSearchForm>
        <template>searchform.html</template>
    </actionSearchForm>
  
    <actionSearch>
        <template>search.html</template>

        <!-- on limite le nombre de réponses -->
        <max>200</max>
        <sort>%</sort>
    </actionSearch>

    <actionShow>
        <template>show.html</template>
        <css>
            <item>/fabweb/css/thesaurus/thesaurus.css</item>
        </css>
        
        <!-- afficher toutes les réponses -->
        <max>-1</max>
    </actionShow>

    <actionNav>
        <action>actionSearch</action>
        <template>nav.html</template>

        <!--  equation par défaut : liste les micro-thesaurus (les descripteurs qui n'ont pas de TG) -->
        <equation>TG:__empty AND EM:__empty</equation>
        
        <!-- afficher toutes les réponses -->
        <max>-1</max>
         
        <js> 
            <item>jquery.js</item>
            <item>/fabweb/js/treeview.js</item>
        </js>
  
        <css> 
            <item>/fabweb/css/thesaurus/treeview.css</item>
        </css>
    </actionNav>
</config>